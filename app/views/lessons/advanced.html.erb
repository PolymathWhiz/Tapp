<div class="wrapper">

  <%= render "shared/sidebar" %>

  <div class="main-panel">
    <%= render "shared/employer_nav" %>

    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <h3>View Lessons</h3>
            <hr>
          </div>
          <%= render "shared/alert" %>
          <!-- <div class="col-lg-3 col-md-6 col-sm-6"> -->
          <div class="col-md-4">
            <div class="card">
              <div class="card-header card-chart" data-background-color="green">
                <div class="ct-chart" id="dailySalesChart"></div>
              </div>
              <div class="card-content">
                <h4 class="title">BEGINNER</h4>
                <p class="category">
                  Beginner level kids
                </p>
              </div>
              <div class="card-footer">
                <div class="stats">
                  <!--<i class="material-icons">access_time</i> updated 4 minutes ago-->
                  <%= link_to "View", lesson_beginner_path %>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card">
              <div class="card-header card-chart" data-background-color="orange">
                <div class="ct-chart" id="emailsSubscriptionChart"></div>
              </div>
              <div class="card-content">
                <h4 class="title">INTERMEDIATE</h4>
                <p class="category">Intermediate level kids</p>
              </div>
              <div class="card-footer">
                <div class="stats">
                  <!--<i class="material-icons">access_time</i> updated 2 days ago-->
                  <%= link_to "View", lesson_intermediate_path %>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card">
              <div class="card-header card-chart" data-background-color="red">
                <div class="ct-chart" id="completedTasksChart"></div>
              </div>
              <div class="card-content">
                <h4 class="title">ADVANCED</h4>
                <p class="category">Advanced level kids</p>
              </div>
              <div class="card-footer">
                <div class="stats">
                  <!--<i class="material-icons">access_time</i> updated 2 days ago-->
                  <%= link_to "View", lesson_advanced_path %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>