<div class="wrapper">

  <%= render 'shared/sidebar' %>

  <div class="main-panel">
    <%= render  "shared/employer_nav" %>

    <div class="content">
      <div class="container-fluid">
        <div class="row">

          <%= render "shared/alert" %>

          <div class="content">
            <div class="container-fluid">
              <div class="row">
                <%#= render 'shared/error_message', object: f.object %>
                <%#= render 'shared/flash_message' %>
                <div class="col-md-6 col-md-offset-3">
                  <div class="card">
                    <div class="card-header">
                      <h4 class="title">Add Lesson</h4>
                    </div>
                    <div class="card-content">
                      <%= form_for(@lesson, url: lessons_path) do |f| %>
                            <div class="form-group label-floating">
                              <label class="control-label">Video Title</label>
                              <%= f.text_field :title, class: 'form-control' %>
                            </div>

                        <div class="form-group label-floating">
                          <label class="control-label">Video Description</label>
                          <%= f.text_field :description, class: 'form-control' %>
                        </div>

                        <div class="form-group label-floating">
                          <label class="control-label">Video URL</label>
                          <%= f.text_field :url, class: 'form-control' %>
                        </div>

                        <div class="form-group label-floating">
                          <%= f.select :category, options_for_select(categories), {prompt: "Select Category"}, class: "form-control" %>
                        </div>

                        <%= f.submit "Create Lesson", class: 'btn btn-primary btn-block' %>
                        <div class="clearfix"></div>
                      <% end %>
                    </div>
                  </div>
                </div>

        </div>
      </div>
    </div>
  </div>
</div>
    </div></div></div>