<div class="wrapper">

  <%= render "shared/sidebar" %>

  <div class="main-panel">
    <%= render "shared/employer_nav" %>

    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <h2 style="margin-bottom: 30px;">
            <%= @lesson.title %>
          </h2>
          <div class="embed-responsive embed-responsive-16by9">
            <%= simple_format(@lesson.url, {}, sanitize: false, class: "embed-responsive-item") %>
          </div>
          <p style="margin-top: 30px;">
            <%= @lesson.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>